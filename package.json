{
  "name": "astro-cloudflare-boilerplate",
  "version": "1.0.0",
  "description": "Production-ready Astro + Cloudflare Workers boilerplate with Tailwind, Sentry, Plausible, Forms",
  "type": "module",
  "engines": {
    "node": "^18.17.1 || ^20.3.0 || >= 21.0.0"
  },
  "scripts": {
    "dev": "wrangler types && astro dev",
    "start": "wrangler types && astro dev",
    "build": "wrangler types && astro build",
    "preview": "wrangler dev",
    "deploy": "astro build && wrangler deploy",
    "astro": "astro",
    "check": "npm run check:astro && npm run check:eslint && npm run check:prettier",
    "check:astro": "astro check",
    "check:eslint": "eslint .",
    "check:prettier": "prettier --check .",
    "fix": "npm run fix:eslint && npm run fix:prettier",
    "fix:eslint": "eslint --fix .",
    "fix:prettier": "prettier -w ."
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.11",
    "@astrojs/sitemap": "^3.6.0",
    "@sentry/astro": "^10.26.0",
    "@sentry/cloudflare": "^10.28.0",
    "astro": "^5.16.0",
    "astro-icon": "^1.1.5",
    "resend": "^6.5.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.5",
    "wrangler": "^4.54.0",
    "@eslint/js": "^9.33.0",
    "@iconify-json/tabler": "^1.2.20",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.17",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "astro-eslint-parser": "^1.2.2",
    "eslint": "^9.33.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.3.0",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "sharp": "0.34.3",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.39.0"
  }
}
