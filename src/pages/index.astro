---
/**
 * Home Page - Replace with your content
 */
import Base from '../layouts/Base.astro';
import { Icon } from 'astro-icon/components';
---

<Base title="Home | My Website" description="Welcome to my website built with Astro and Cloudflare Workers">
  <main class="container mx-auto max-w-3xl px-4 py-16">
    <div class="text-center">
      <h1 class="mb-4 text-4xl font-bold tracking-tight sm:text-5xl">
        Astro + Cloudflare Boilerplate
      </h1>
      <p class="mb-8 text-lg text-gray-600 dark:text-gray-400">
        Production-ready starter with Tailwind, Sentry, Plausible, and Forms
      </p>

      <div class="mb-12 flex justify-center gap-4">
        <a
          href="https://docs.astro.build"
          class="inline-flex items-center gap-2 rounded-lg bg-blue-600 px-4 py-2 text-white hover:bg-blue-700"
        >
          <Icon name="tabler:book" class="h-5 w-5" />
          Docs
        </a>
        <a
          href="/contact"
          class="inline-flex items-center gap-2 rounded-lg border border-gray-300 px-4 py-2 hover:bg-gray-50 dark:border-gray-700 dark:hover:bg-gray-800"
        >
          <Icon name="tabler:mail" class="h-5 w-5" />
          Contact
        </a>
      </div>

      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <div class="rounded-lg border p-6 text-left dark:border-gray-700">
          <Icon name="tabler:brand-cloudflare" class="mb-3 h-8 w-8 text-orange-500" />
          <h3 class="mb-2 font-semibold">Cloudflare Workers</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Edge deployment with global CDN</p>
        </div>
        <div class="rounded-lg border p-6 text-left dark:border-gray-700">
          <Icon name="tabler:brand-tailwind" class="mb-3 h-8 w-8 text-cyan-500" />
          <h3 class="mb-2 font-semibold">Tailwind CSS v4</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Utility-first CSS with dark mode</p>
        </div>
        <div class="rounded-lg border p-6 text-left dark:border-gray-700">
          <Icon name="tabler:bug" class="mb-3 h-8 w-8 text-purple-500" />
          <h3 class="mb-2 font-semibold">Sentry</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Error tracking (client + server)</p>
        </div>
        <div class="rounded-lg border p-6 text-left dark:border-gray-700">
          <Icon name="tabler:chart-bar" class="mb-3 h-8 w-8 text-green-500" />
          <h3 class="mb-2 font-semibold">Plausible Analytics</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Privacy-friendly, cookie-free</p>
        </div>
        <div class="rounded-lg border p-6 text-left dark:border-gray-700">
          <Icon name="tabler:shield-check" class="mb-3 h-8 w-8 text-blue-500" />
          <h3 class="mb-2 font-semibold">Turnstile</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Bot protection for forms</p>
        </div>
        <div class="rounded-lg border p-6 text-left dark:border-gray-700">
          <Icon name="tabler:mail-forward" class="mb-3 h-8 w-8 text-pink-500" />
          <h3 class="mb-2 font-semibold">Resend</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">Transactional email API</p>
        </div>
      </div>
    </div>
  </main>
</Base>
