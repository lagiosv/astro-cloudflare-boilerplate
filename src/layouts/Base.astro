---
/**
 * Base Layout - Minimal HTML structure with SEO essentials
 */
import PlausibleAnalytics from '../components/PlausibleAnalytics.astro';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description = 'Welcome to my website', ogImage = '/og-image.png' } = Astro.props;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />

    <!-- Plausible Analytics (set scriptId in wrangler.jsonc vars or hardcode) -->
    <!-- <PlausibleAnalytics scriptId="pa-yourScriptId" /> -->
  </head>
  <body class="min-h-screen bg-white text-gray-900 antialiased dark:bg-gray-900 dark:text-gray-100">
    <slot />
  </body>
</html>

<style is:global>
  @import 'tailwindcss';
</style>
